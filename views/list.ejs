{% extends './layout/layout.ejs' %}

{% block content %}
<div>
  <h1 id="hi">hi</h1>
  {% if residents %}
  <div class="timeline">
    <form id="resi-form" action="/user/{{user.id}}/list" method="post">
      <div class="input-group">
        <label for="resi-room">방</label>
        <input id="resi-room" type="text" name="room">
      </div>
      <div class="input-group">
        <label for="join-nick">이름</label>
        <input id="join-nick" type="text" name="name">
      </div>
      <button id="resi-btn" type="submit" class="btn">사생 추가</button>
    </form>
  </div>
  {% include "./resi-list.ejs" %}

  {% else %}
  <h2>
    사생 명단을 입력해 주세요
  </h2>
  <div class="timeline">
    <form id="resi-form" action="/user/{{user.id}}/list" method="post">
      <div class="input-group">
        <label for="resi-room">방</label>
        <input id="resi-room" type="text" name="room">
      </div>
      <div class="input-group">
        <label for="join-nick">이름</label>
        <input id="join-nick" type="text" name="name">
      </div>
      <button id="resi-btn" type="submit" class="btn">사생 추가</button>
    </form>
  </div>
  {% endif %}
</div>
{% endblock %}

{% block script %}
<script>
  async function delRow(row, obj) {
    try {
      await axios.delete(`/resident/${row}`);
      var tr = obj.parentNode.parentNode;
      tr.parentNode.removeChild(tr);
    } catch (err) {
      console.error(err)
    }
  }
</script>
{% endblock %}