{% extends 'layout.ejs' %}

{% block content %}
<div>
  {% if resident %}
  <h1>
    사생 있음
  </h1>
  <div class="timeline">
    <form id="resi-form" action="/resident/{{user.id}}/list" method="post">
      <div class="input-group">
        <label for="resi-room">방</label>
        <input id="resi-room" type="text" name="room">
      </div>
      <div class="input-group">
        <label for="join-nick">이름</label>
        <input id="join-nick" type="text" name="name">
      </div>
      <button id="resi-btn" type="submit" class="btn">사생 추가</button>
    </form>
  </div>
  {% else %}
  <h1>
    사생 없음
  </h1>
  <div class="timeline">
    <form id="resi-form" action="/resident/{{user.id}}/list" method="post">
      <div class="input-group">
        <label for="resi-room">방</label>
        <input id="resi-room" type="text" name="room">
      </div>
      <div class="input-group">
        <label for="join-nick">이름</label>
        <input id="join-nick" type="text" name="name">
      </div>
      <button id="resi-btn" type="submit" class="btn">사생 추가</button>
    </form>
  </div>
  {% endif %}
</div>
{% endblock %}