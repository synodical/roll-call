{% extends 'layout.ejs' %}

{% block content %}
<div class="timeline">
  <form id="join-form" action="/user/{{id}}" method="post">
    <div class="input-group">
      <label for="join-email">이메일</label>
      <input id="join-email" type="email" name="email">
      <input type="hidden" name="_method" value="put" />
    </div>
    <div class="input-group">
      <label for="join-nick">닉네임</label>
      <input id="join-nick" type="text" name="nick">
      <input type="hidden" name="_method" value="put" />
    </div>
    <div class="input-group">
      <label for="join-floor">담당 층</label>
      <input id="join-floor" type="text" name="floor">
      <input type="hidden" name="_method" value="put" />
    </div>
    <button id="join-btn" type="submit" class="btn">정보 수정</button>
  </form>
</div>
{% endblock %}