{% extends './layout/layout.ejs' %}

{% block content %}
<div class="container-fluid">
  
  <form id="join-form" action="/users/{{user.id}}" method="post">
    <div class="form-group">
      <fieldset disabled="">
        <label class="form-label mt-3" for="disabledInput">Id</label>
        <input class="form-control" id="disabledInput" name="uid" type="text" placeholder="{{user.uid}}" disabled="">
      </fieldset>
      <label class="col-form-label mt-1" for="inputDefault">Nickname</label>
      <input id="join-nick" name="nick" type="text" class="form-control" value="{{user.nick}}">
      <label class="col-form-label mt-1" for="inputDefault">담당 층</label>
      <input id="join-floor" name="floor" type="text" class="form-control" value="{{user.floor}}">
    </div>
    <button id="join-btn" type="submit" class="btn btn-primary my-5">정보 수정</button>
  </form>
</div>
{% endblock %}
{% block script %}
{% endblock %}
