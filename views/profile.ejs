{% extends 'layout.ejs' %}

{% block content %}
<div class="timeline">
  <form id="join-form" action="/user/{{user.id}}" method="post">
    <div class="input-group">
      <label for="join-email">이메일</label>
      <input id="join-email" type="email" name="email" value="{{user.email}}">
    </div>
    <div class="input-group">
      <label for="join-nick">닉네임</label>
      <input id="join-nick" type="text" name="nick" value="{{user.nick}}">
    </div>
    <div class="input-group">
      <label for="join-floor">담당 층</label>
      <input id="join-floor" type="text" name="floor" value="{{user.floor}}">
    </div>
    <button id="join-btn" type="submit" class="btn">정보 수정</button>
  </form>

</div>
{% endblock %}
<%-include('. /footer.ejs')%>